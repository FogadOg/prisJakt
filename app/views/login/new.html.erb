<%= form_with(url: login_path, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, required: true, class: "form-text text-muted" %>
  </div>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, required: true, class: "form-text text-muted" %>
  </div>
  
  <%= form.submit 'Login' %>
<% end %>
<p>Dont Have A Account </p><%= link_to 'Signup', signup_path %>
