<% if @message.present? %>
  <div class="registration-message">
    <%= @message %>
  </div>
<% end %>


<%= form_with model: @user, url: signup_path do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, required: true, class: "form-text text-muted" %>
  </div>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, required: true, class: "form-text text-muted" %>
  </div>
  <%= form.submit "Sign Up" %>
<% end %>